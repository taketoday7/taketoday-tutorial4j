<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%boldMagenta(%d{HH:mm:ss.SSS}) %boldYellow([%thread]) %highlight(%-5level) %boldGreen([%logger{36}]) >>> %boldCyan(%msg) %n</pattern>
		</encoder>
	</appender>

	<root level="warn">
		<appender-ref ref="STDOUT"/>
	</root>
</configuration>